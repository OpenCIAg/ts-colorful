{
  "name": "@ciag/colorful",
  "private": false,
  "version": "0.0.1",
  "description": "Color Generator",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "**/*"
  ],
  "standard": {
    "ignore": [
      "coverage/**",
      "node_modules/**"
    ]
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cp package.json dist/",
    "test": "nyc --reporter=lcov --reporter=html --reporter=text mocha test/**/*.spec.ts",
    "predeploy": "npm run build",
    "deploy": "cd dist/ && npm publish --access public",
    "coverage": "nyc report --reporter=text-lcov | codeclimate-test-reporter "
  },
  "author": "Etto",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "chai": "^4.1.2",
    "chai-string": "^1.4.0",
    "codeclimate-test-reporter": "^0.5.1",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenCIAg/colorful.git"
  },
  "keywords": [
    "color"
  ],
  "bugs": {
    "url": "https://github.com/OpenCIAg/colorful/issues"
  },
  "homepage": "https://github.com/OpenCIAg/colorful#readme"
}
